<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="10dp">
    <TextView
        android:id="@+id/tv_1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:text="30"
        android:textColor="@color/white"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="20sp"
        />
    <ImageView
        android:id="@+id/imgv_1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:tint = "@color/white"
        app:layout_constraintTop_toBottomOf="@id/tv_1"
        app:layout_constraintStart_toStartOf="@id/tv_1"

        />
    <TextView
        android:layout_marginStart="10dp"
        android:id="@+id/tv_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="86*C"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/view_1"
        app:layout_constraintStart_toStartOf="parent"
        />
    <View
        android:layout_marginStart="15dp"
        android:id="@+id/view_1"
        android:layout_width="20dp"
        android:layout_height="70dp"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@id/tv_2"

        />
    <TextView
        android:layout_marginStart="10dp"
        android:id="@+id/tv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="60*C"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/imgv_2"
        android:layout_marginBottom="20dp"
        />
    <ImageView
        android:id="@+id/imgv_2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:tint = "@color/white"
        android:src="@drawable/sun"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <TextView
        android:id="@+id/tv_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="100%"
        app:layout_constraintStart_toEndOf="@id/imgv_2"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>